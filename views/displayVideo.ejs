<%- include('partials/header') %>
    <style>
        .video-container{
            width: 100%;
            height: 500px;
            max-width: 500px;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0 auto;
        }

        video{
            width: 100%;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            border-radius: 10px;
        }
        #btn_back{ display: block; padding: 0.5rem; cursor: pointer; margin: 0 auto;
            background-color: black; color: white; border: none; border-radius: 5px; width: 70px;
        }
        a{
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="video-container">
        <video controls>
            <source src="data:video/webm;base64,<%= video.toString('base64') %>" type="video/webm">
        </video>
    </div>
    <a href="/video">
        <button id="btn_back" onmouseover="mouseover()" onmouseout="mouseout()">Back</button>
    </a>

    <script>
        function mouseover() {
            document.getElementById('btn_back').style.color = 'yellow';
        }

        function mouseout() {
            document.getElementById('btn_back').style.color = 'white';
        }
    </script>

<%- include('partials/footer') %>