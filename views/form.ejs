    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    :root {
        --orange: #F2C14E;
        --winning-blocks: #2d414b;
    }

    body {
        color: var(--orange);
        font-family: 'Finger Paint', cursive;
    }

    .container {
        background-image: url("http://pixner.net/boleto/demo/assets/images/account/account-bg.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    form {
        text-align: center;
    }

    .title {
        font-size: 54px;
        text-transform: uppercase;
        margin-bottom: 20px;
    }

    .upload_img {
        margin-bottom: 20px;
    }

    .label_name {
        font-size: 18px;
        margin-bottom: 10px;
    }

    input[type=file] {

    }

    input[type=file]::file-selector-button {
        position: relative;
        display: inline-block;
        margin-left: 10px;
        padding: 3px 10px;
        background-image: linear-gradient(169deg, #5560ff 17%, #aa52a1 63%, #ff4343 100%);
        color: #fff;
        font-size: 18px;
        font-weight: 600;
        border-radius: 30px;
        cursor: pointer;
        border: none;
        outline: none;
    }

    .btn_submit,
    .btn_cancel {
        padding: 10px 20px;
        background-image: linear-gradient(169deg, #5560ff 17%, #aa52a1 63%, #ff4343 100%);
        color: #fff;
        border: none;
        outline: none;
        font-size: 18px;
        font-weight: 600;
        margin-top: 10px;
        margin-right: 10px;
        height: 40px;
        width: 150px;
        border-radius: 30px;
        transition: all ease 0.3s;
    }

    .btn_cancel {
        background-image: none;
        background-color: var(--orange);
    }

    .btn_cancel:hover {
        background-color: #d48326;
    }

    #upload_video {
        background-image: linear-gradient(169deg, #ff4343 17%, #aa52a1 63%, #5560ff 100%);
    }

    #upload_video:hover , .btn_submit:hover{
        cursor: pointer;
        transform: translateY(-3px);
    }
    
